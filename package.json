{
	"name": "645-monorepo",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"workspaces": {
		"packages": ["apps/*", "packages/*"],
		"nohoist": ["**/node_modules", "**/node_modules/**"]
	},
	"scripts": {
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"www": "bun --cwd apps/www -- ",
		"add:www": "bun add --cwd apps/www -D --",
		"clean": "bun clean:modules && bun clean:cache",
		"clean:modules": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
		"clean:cache": "bun cache rm && rm -rf bun.lockb",
		"clean:fresh": "bun clean && bun install",
		"trail": "docker run --pull always --network host --mount type=bind,source=$PWD/services/trailbase/traildepot,target=/app/traildepot trailbase/trailbase:latest /app/trail run --dev"
	}
}
