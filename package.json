{
	"name": "645-monorepo",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"web": "bun --cwd apps/web -- ",
		"web:add": "bun add --cwd apps/web -D --",
		"clean": "bun clean:modules && bun clean:cache",
		"clean:modules": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
		"clean:cache": "bun cache rm && rm -rf bun.lockb",
		"clean:fresh": "bun clean && bun install"
	}
}